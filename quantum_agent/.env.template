# Quantum Agent Environment Configuration Template
# Copy this to .env in the quantum_agent directory

# IBM Quantum API Token (get from https://quantum-computing.ibm.com/)
IBMQ_API_TOKEN=your_ibm_quantum_token_here

# D-Wave API Token (get from https://cloud.dwavesys.com/)
DWAVE_API_TOKEN=your_dwave_token_here

# Google Quantum AI (if available)
GOOGLE_QUANTUM_PROJECT_ID=your_google_project_id

# Safety Limits
MAX_QUBITS_PUBLIC=20
MAX_SHOTS_PUBLIC=8192
MAX_SLURM_JOBS_PER_HOUR=10
MAX_HPC_WALLTIME_HOURS=24

# HPC Cluster Configurations (example)
# MIT_SUPERCLOUD_HOST=txe1-login.mit.edu
# MIT_SUPERCLOUD_USERNAME=your_username
# TACC_HOST=frontera.tacc.utexas.edu
# TACC_USERNAME=your_username

# Vector Database Settings
VECTOR_DB_PATH=./knowledge_db
CHROMADB_PATH=./chromadb
FAISS_INDEX_PATH=./faiss_index

# Fusion System Integration
FUSION_API_URL=http://localhost:8000
FUSION_UPDATE_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/quantum_agent.log
